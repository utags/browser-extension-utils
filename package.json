{
  "name": "browser-extension-utils",
  "version": "0.3.2",
  "description": "Utilities for developing browser extensions and userscripts",
  "type": "module",
  "main": "./lib/index.ts",
  "exports": {
    ".": "./lib/index.ts",
    "./userscript": "./lib/userscript.ts"
  },
  "scripts": {
    "p": "prettier --write .",
    "xo": "xo",
    "lint": "prettier --write . && xo --fix && tsc --noemit",
    "lint:type": "tsc --noemit",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "test:coverage": "vitest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/utags/browser-extension-utils.git"
  },
  "keywords": [
    "extensions",
    "userscripts",
    "utilities"
  ],
  "author": "Pipecraft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/utags/browser-extension-utils/issues"
  },
  "homepage": "https://github.com/utags/browser-extension-utils#readme",
  "devDependencies": {
    "@types/chrome": "^0.1.32",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "happy-dom": "^20.0.11",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "xo": "^1.2.3"
  },
  "files": [
    "lib/",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": "^18.0.0 || ^20.0.0 || >=22.0.0"
  }
}
