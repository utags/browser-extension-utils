{
  "name": "browser-extension-utils",
  "version": "0.2.2",
  "description": "Utilities for developing browser extensions and userscripts",
  "type": "module",
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./userscript": "./lib/userscript.js"
  },
  "scripts": {
    "p": "prettier --write .",
    "xo": "xo",
    "lint": "prettier --write . && xo --fix && tsc --noemit",
    "lint:type": "tsc --noemit",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/utags/browser-extension-utils.git"
  },
  "keywords": [
    "extensions",
    "userscripts",
    "utilities"
  ],
  "author": "Pipecraft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/utags/browser-extension-utils/issues"
  },
  "homepage": "https://github.com/utags/browser-extension-utils#readme",
  "devDependencies": {
    "@types/chrome": "^0.1.32",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "happy-dom": "^20.0.11",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "xo": "^1.2.3"
  },
  "files": [
    "lib/",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": "^18.0.0 || ^20.0.0 || >=22.0.0"
  },
  "xoxx": {
    "space": 2,
    "prettier": true,
    "globals": [
      "GM",
      "GM_addElement",
      "GM_addStyle",
      "GM_registerMenuCommand",
      "trustedTypes",
      "MutationObserver",
      "history",
      "window",
      "top",
      "document"
    ],
    "rules": {
      "logical-assignment-operators": 0,
      "prefer-destructuring": 0,
      "unicorn/prevent-abbreviations": 0,
      "capitalized-comments": 0
    }
  }
}
